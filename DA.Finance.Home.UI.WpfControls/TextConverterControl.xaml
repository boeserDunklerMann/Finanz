<UserControl x:Class="DA.Finance.Home.UI.WpfControls.TextConverterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DA.Finance.Home.UI.WpfControls"
			 xmlns:VM="clr-namespace:DA.Finance.Home.MVVM.ViewModel;assembly=DA.Finance.Home.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<UserControl.InputBindings>
		<KeyBinding Key="Enter" Command="{Binding DoAppLogicCommand}"/>
	</UserControl.InputBindings>

	<StackPanel Height="336">
		<Label>Text</Label>
		<TextBox Text="{Binding SomeText, UpdateSourceTrigger=PropertyChanged}"/>
		<Label>History</Label>
		<ListBox ItemsSource="{Binding History}" Height="200"/>
		<Button Command="{Binding DoAppLogicCommand}">GO</Button>
	</StackPanel>
	
</UserControl>
